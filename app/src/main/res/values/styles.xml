<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
    </style>
    /*-------------------Login------------------------------*/
    <style name="lblLogin">
         <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="txtLogin">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>

        <item name="android:layout_weight">0.05</item>
        <item name="android:background">@color/gray</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="btnLogin">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_weight">0.05</item>
        <item name="android:background">@color/gray</item>

    </style>
    <style name="controlePadding">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
/*          DashBoard           */

    <style name="btnDash">
        <item name="android:padding">6dip</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>
    <style name="Edt_Estilo">
        <item name="android:textSize">@dimen/texto_padrao</item>
        <item name="android:layout_marginBottom">@dimen/margin_widgets</item>
    </style>
    <style name="AppTheme.Dark.Dialog.Sucesso" parent="android:TextAppearance.Material.Notification.Info">
        <item name="android:colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_sucesso</item>
    </style>
    <style name="AppTheme.Dark.Dialog.Info" parent="android:TextAppearance.Material.Notification.Info">
        <item name="android:colorAccent">@color/branco</item>
        <item name="android:background">@color/primary_info</item>
    </style><style name="AppTheme.Dark.Dialog.Error" parent="android:TextAppearance.Material.Notification.Info">
    <item name="android:colorAccent">@color/branco</item>
    <item name="android:textColorPrimary">@color/branco</item>
    <item name="android:background">@color/primary_error</item>
    </style>
    <style name="AppTheme.Dark.Dialog.Alert" parent="android:TextAppearance.Material.Notification.Info">
        <item name="android:colorAccent">@color/branco</item>
        <item name="android:textColorPrimary">@color/branco</item>
        <item name="android:background">@color/primary_alert</item>
    </style>
</resources>
